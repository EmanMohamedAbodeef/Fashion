@model FashionIA.Models.TempArticle

@{
    ViewBag.Title = "Delete";
                    @Styles.Render("~/Content/All.css")

}

<div class="container" style="margin-top:5%">
    <h2>Delete This Article </h2>

    <h3>Are you sure you want to delete this From Your History?</h3>
    <div>

        <hr />
        <br />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ViewNo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ViewNo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Content)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>

        </dl>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to History", "History")
            </div>
        }
    </div>
</div>